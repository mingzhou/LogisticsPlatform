<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="5dip"
    android:paddingRight="5dip" >

    <TextView
        android:id="@+id/list_container_header_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="@color/ios_setting_text_shadow_color"
        android:shadowDy="2"
        android:shadowRadius="1"
        android:textColor="@color/ios_setting_text_hint_color"
        android:textSize="@dimen/ios_container_header_size"
      />

    <LinearLayout
        android:id="@+id/list_container_header_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
