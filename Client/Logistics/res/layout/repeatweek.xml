                        android:textColor="@android:color/black"
                        android:fadingEdge="horizontal"
                        android:layout_centerVertical="true"

                        />
                    <ImageView
                        android:id="@+id/third_arrow"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:background="@drawable/ic_delivery"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:visibility="invisible"
                        />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:clickable="true"
                android:layout_marginLeft="4dip"
                android:layout_marginRight="4dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/four_layout"
                android:background="@drawable/preferencelayoutbackgroundmainviewbody"
                >
                <RelativeLayout
                    android:id="@+id/relativeLayout1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dip"
                    >
                    <TextView
                        android:id="@+id/four_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/thursday"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"
                        android:fadingEdge="horizontal"
                        android:layout_centerVertical="true"
                        />
                    <ImageView
                        android:id="@+id/four_arrow"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:background="@drawable/ic_delivery"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:visibility="invisible"
                        />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:clickable="true"
                android:layout_marginLeft="4dip"
                android:layout_marginRight="4dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/five_layout"
                android:background="@drawable/preferencelayoutbackgroundmainviewbody"
                >
                <RelativeLayout
                    android:id="@+id/relativeLayout1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dip"
                    >
                    <TextView
                        android:id="@+id/five_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/friday"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"
                        android:fadingEdge="horizontal"
                        android:layout_centerVertical="true"

                        />
                    <ImageView
                        android:id="@+id/five_arrow"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:background="@drawable/ic_delivery"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:visibility="invisible"
                        />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:clickable="true"
                android:layout_marginLeft="4dip"
                android:layout_marginRight="4dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/six_layout"
                android:background="@drawable/preferencelayoutbackgroundmainviewbody"
                >
                <RelativeLayout
                    android:id="@+id/relativeLayout1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dip"
                    >
                    <TextView
                        android:id="@+id/six_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/staturday"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"
                        android:fadingEdge="horizontal"
                        android:layout_centerVertical="true"
                        />
                    <ImageView
                        android:id="@+id/six_arrow"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:background="@drawable/ic_delivery"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                         android:visibility="invisible"
                        />
                </RelativeLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_marginLeft="4dip"
                android:layout_marginRight="4dip"
                android:id="@+id/seven_layout"
                android:background="@drawable/preferencelayoutbackgroundmainviewfoot"
                >
                <RelativeLayout
                    android:id="@+id/relativeLayout1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                       android:padding="10dip"
                    >
                        <TextView
                            android:id="@+id/seven_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
