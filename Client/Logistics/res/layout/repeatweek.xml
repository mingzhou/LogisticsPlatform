        <Button
            android:id="@+id/return_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:background="@drawable/ioslike_arrow_left_btn"
            android:gravity="center"
            android:paddingLeft="15dip"
            android:paddingRight="10dip"
            android:shadowColor="@color/ios_navigation_bar_text_shadow_color"
            android:shadowDy="-2"
            android:shadowRadius="1"
            android:text="@string/return_button"
            android:textColor="@color/ios_navigation_bar_text_color"
            android:textSize="@dimen/ios_activity_reture_btn_title_size"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/repeat"
                style="@style/titleTextStyle"
                />
    </RelativeLayout>

   <ScrollView
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       >
        <LinearLayout
            android:id="@+id/LinearLayout"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/first_layout"
                android:clickable="true"
                android:layout_marginLeft="4dip"
                android:layout_marginRight="4dip"
                android:background="@drawable/preferencelayoutbackgroundmainviewhead"
                >
                <RelativeLayout
                    android:id="@+id/relativeLayout1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dip"

                    >
                    <TextView
                        android:id="@+id/first_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/monday"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"
                        android:fadingEdge="horizontal"
                        android:layout_centerVertical="true"
                        />
                    <ImageView
                        android:id="@+id/first_arrow"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_delivery"
                        android:layout_alignParentRight="true"
                        android:visibility="invisible"
                        />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:clickable="true"
                android:layout_marginLeft="4dip"
                android:layout_marginRight="4dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/second_layout"
                android:background="@drawable/preferencelayoutbackgroundmainviewbody"
                >
                <RelativeLayout
                    android:id="@+id/relativeLayout1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dip"

                    >
                    <TextView
                        android:id="@+id/second_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tuesday"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"
                        android:fadingEdge="horizontal"
                        android:layout_centerVertical="true"

                        />
                    <ImageView
                        android:id="@+id/second_arrow"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:background="@drawable/ic_delivery"
                        android:layout_alignParentRight="true"
                         android:layout_centerVertical="true"
                          android:visibility="invisible"
                        />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:clickable="true"
                android:layout_marginLeft="4dip"
                android:layout_marginRight="4dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/third_layout"
                android:background="@drawable/preferencelayoutbackgroundmainviewbody"
                >
                <RelativeLayout
                    android:id="@+id/relativeLayout1"
                    android:layout_width="fill_parent"
